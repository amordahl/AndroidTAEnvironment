<?xml version="1.0" encoding="utf-8" standalone="yes"?>
<config>
  <androidPlatforms>$ANDROID_SDK_HOME</androidPlatforms>
    <maxMemory>4</maxMemory>
    <tools>
        <tool name="FlowDroid" version="1">
            <priority>1</priority>
            <path>$ANDROID_TA_ENVIRONMENT_HOME/tools/FlowDroid</path>
            <run>$ANDROID_TA_ENVIRONMENT_HOME/tools/config/FlowDroid/current/aqlRun_aplength7.sh %MEMORY% %APP_APK% %ANDROID_PLATFORMS% %APP_APK_FILENAME%_result.txt</run>
            <runOnExit>$ANDROID_TA_ENVIRONMENT_HOME/AQL-System/flushMemory.sh</runOnExit>
            <runOnAbort>$ANDROID_TA_ENVIRONMENT_HOME/AQL-System/killpid.sh %PID%</runOnAbort>
            <result>$ANDROID_TA_ENVIRONMENT_HOME/tools/FlowDroid/%APP_APK_FILENAME%_result.txt</result>
            <questions>IntraAppFlows</questions>
            <instances>0</instances>
            <memoryPerInstance>4</memoryPerInstance>
        </tool>
    </tools>
    <preprocessors>
        <tool name="ApkCombiner" version="1">
            <priority>1</priority>
            <path>$ANDROID_TA_ENVIRONMENT_HOME/preprocessor/ApkCombiner/release</path>
            <run>$ANDROID_TA_ENVIRONMENT_HOME/preprocessor/ApkCombiner/release/aqlRun.sh %APP_APK_FILENAME% %ANDROID_PLATFORMS% %APP_APK%</run>
            <runOnExit>$ANDROID_TA_ENVIRONMENT_HOME/AQL-System/flushMemory.sh</runOnExit>
            <result>$ANDROID_TA_ENVIRONMENT_HOME/preprocessor/ApkCombiner/results/%APP_APK_FILENAME%_combined.apk</result>
            <questions>COMBINE</questions>
            <instances>1</instances>
            <memoryPerInstance>4</memoryPerInstance>
        </tool>
    </preprocessors>
</config>
